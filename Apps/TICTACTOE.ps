
spr XSprite '2222222223++++322+3++3+22++33++22++33++22+3++3+223++++3222222222'
spr OSprite '000000000+1111+001++++1001++++1001++++1001++++100+1111+000000000'
spr BSprite '6666666667777776677777766777777667777776677777766777777666666666'
spr Cursor '00++++++01000++++01110+++011110++01110++++0100+++++0++0++++++++0'

spr PPGLogo ''
var LogoSize 32
var LogoScale 4
var LX 170
var LY 20

var SpriteSizes 8
var Scale 6
var X 0
var Y 0

var CursorX 0
var CursorY 0
var CursorScale 2

var Temp 0

// Board Array
arr Board 0

// Process Speed
pspeed 250

var Input 0

// X or O 
var Key 1


// For Math Ops

var Temp1 0
var Temp2 0

jumpl Main


:RunCursorLogic
    wipe 

    set Temp1 CursorY
    div Temp1 48

    mul Temp1 3

    set Temp2 CursorX
    div Temp2 48

    add Temp1 Temp2

    arrset Board Temp1 Key


    jumpl Main

:Main
    clear
    set X 0
    set Y 0
    set Temp 0

    drawspr PPGLogo LX LY LogoScale LogoSize

    wipe
    jumpl DrawBoard


    jumpl Main


:Up00
    sub CursorY 48
    delay 10
    jumpl Main

:Right
    add CursorX 48
    delay 10
    jumpl Main

:Down
    add CursorY 48
    delay 10
    jumpl Main

:Left
    sub CursorX 48
    delay 10
    jumpl Main

:A000
    set Key 1
    jumpl RunCursorLogic

:S000
    set Key 2
    jumpl RunCursorLogic

:ResetBoard
    arrwipe Board 0
    jumpl Main
// Drawing Function 

:DrawBoard
    wipe
    arrload Board 0 Temp
    cmp Temp 1
    jife DX0
    jifg DO0
    jifl DB0

    wipe
    arrload Board 1 Temp
    cmp Temp 1
    jife DX1
    jifg DO1
    jifl DB1

    wipe
    arrload Board 2 Temp
    cmp Temp 1
    jife DX2
    jifg DO2
    jifl DB2

    wipe
    arrload Board 3 Temp
    cmp Temp 1
    jife DX3
    jifg DO3
    jifl DB3

    wipe
    arrload Board 4 Temp
    cmp Temp 1
    jife DX4
    jifg DO4
    jifl DB4

    wipe
    arrload Board 5 Temp
    cmp Temp 1
    jife DX5
    jifg DO5
    jifl DB5

    wipe
    arrload Board 6 Temp
    cmp Temp 1
    jife DX6
    jifg DO6
    jifl DB6

    wipe
    arrload Board 7 Temp
    cmp Temp 1
    jife DX7
    jifg DO7
    jifl DB7

    wipe
    arrload Board 8 Temp
    cmp Temp 1
    jife DX8
    jifg DO8
    jifl DB8

    drawspr Cursor CursorX CursorY CursorScale SpriteSizes
    wipe
    pullinp Input
    cmp Input 1
    jife Up00
    cmp Input 2
    jife Right
    cmp Input 3
    jife Down
    cmp Input 4
    jife Left

    wipe
    cmp Input 6
    jife A000

    wipe
    cmp Input 7
    jife S000

    wipe
    cmp Input 5
    jife ResetBoard

    wipe

    jumpl Main


// For Drawing Each Board Position 0-8

:DX0
    drawspr XSprite X Y Scale SpriteSizes
    ret

:DO0
    drawspr OSprite X Y Scale SpriteSizes
    ret

:DB0
    drawspr BSprite X Y Scale SpriteSizes
    ret

:DX1
    set X 48
    drawspr XSprite X Y Scale SpriteSizes
    ret

:DO1
    set X 48
    drawspr OSprite X Y Scale SpriteSizes
    ret

:DB1
    set X 48
    drawspr BSprite X Y Scale SpriteSizes
    ret

:DX2
    set X 96
    drawspr XSprite X Y Scale SpriteSizes
    ret

:DO2
    set X 96
    drawspr OSprite X Y Scale SpriteSizes
    ret

:DB2
    set X 96
    drawspr BSprite X Y Scale SpriteSizes
    ret

:DX3
    set X 0
    set Y 48
    drawspr XSprite X Y Scale SpriteSizes
    ret

:DO3
