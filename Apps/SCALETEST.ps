spr Sprite '+++++00+++++++++++++0770++00+++++000076600770+++07706066667660++06666666606660++066600666666660++06676000066660++07666666666660+067776666607666006777666666006600666776666666660+966776666666660++9966669966669+++++9999++9999+++++++++++++++++++++++++++++++++++'

var SpriteX 128
var SpriteY 50
var SpriteScale 4
var SpriteSize 16

var Input 0


var Temp 0
var Temp2 160

:Main

drawspr Sprite SpriteX SpriteY SpriteScale SpriteSize  

pullinp Input

cmpvi Input 1
    jife KeyUp

cmpvi Input 3
    jife KeyDown

tick 

jumpl Main

:KeyUp
    add SpriteScale 1
    jumpl Scale

ret

:KeyDown
    sub SpriteScale 1
    jumpl Scale
ret


:Scale
    set Temp 0
    set Temp2 160
    setv Temp SpriteScale
    mulv Temp SpriteSize

    // 64 

    div Temp 2

    // 32


    sub Temp2 160

    setv SpriteX Temp2

jumpl Main